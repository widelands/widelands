msgid "“%s”"
msgstr "„%s“"

#: ../../data/scripting/format_scenario.lua:40
msgid "New Objective"
msgid_plural "New Objectives"
msgstr[0] "Neues Ziel"
msgstr[1] "Neue Ziele"
