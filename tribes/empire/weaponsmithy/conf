size=big
output=wood_lance
output=lance
output=advanced_lance
output=heavy_lance
output=war_lance

[aihints]
prohibited_till=900

[buildcost]
log=2
stone=2
marble=2
marblecolumn=3

[return_on_dismantle]
log=1
stone=1
marble=2
marblecolumn=1

[working positions]
weaponsmith=1

[inputs]
iron=8
gold=8
coal=8
wood=8

[programs]
# TRANSLATORS: "Completed/Skipped/Did not start forging a wood lance because ...
produce_wood_lance=_forging a wood lance
# TRANSLATORS: "Completed/Skipped/Did not start forging a lance because ...
produce_lance=_forging a lance
# TRANSLATORS: "Completed/Skipped/Did not start forging an advanced lance because ...
produce_advanced_lance=_forging an advanced lance
# TRANSLATORS: "Completed/Skipped/Did not start forging a heavy lance because ...
produce_heavy_lance=_forging a heavy lance
# TRANSLATORS: "Completed/Skipped/Did not start forging a war lance because ...
produce_war_lance=_forging a war lance
# TRANSLATORS: "Completed/Skipped/Did not start working because ...
work=_working

[produce_wood_lance]
return=skipped unless economy needs wood_lance
sleep=20000
consume=wood
playFX=../../../sound/smiths/smith 192
animate=working 30000
playFX=../../../sound/smiths/sharpening 120
produce=wood_lance

[produce_lance]
return=skipped unless economy needs lance
sleep=32000
consume=coal iron wood
playFX=../../../sound/smiths/smith 192
animate=working 45000
playFX=../../../sound/smiths/sharpening 120
produce=lance

[produce_advanced_lance]
return=skipped unless economy needs advanced_lance
sleep=32000
consume=coal iron:2 wood
playFX=../../../sound/smiths/smith 192
animate=working 45000
playFX=../../../sound/smiths/sharpening 120
produce=advanced_lance

[produce_heavy_lance]
return=skipped unless economy needs heavy_lance
sleep=32000
consume=coal:2 gold iron wood
playFX=../../../sound/smiths/smith 192
animate=working 45000
playFX=../../../sound/smiths/sharpening 120
produce=heavy_lance

[produce_war_lance]
return=skipped unless economy needs war_lance
sleep=32000
consume=coal:2 gold iron:2 wood
playFX=../../../sound/smiths/smith 192
animate=working 45000
playFX=../../../sound/smiths/sharpening 120
produce=war_lance

[work]
call=produce_wood_lance
call=produce_lance
call=produce_advanced_lance
call=produce_heavy_lance
call=produce_war_lance
return=skipped

