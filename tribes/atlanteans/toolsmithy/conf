[produce_bread_paddle]
return=skipped unless economy needs bread_paddle
sleep=32000
consume=iron log
animate=working 35000
produce=bread_paddle

[produce_bucket]
return=skipped unless economy needs bucket
sleep=32000
consume=iron log
animate=working 35000
produce=bucket

[produce_fire_tongs]
return=skipped unless economy needs fire_tongs
sleep=32000
consume=iron log
animate=working 35000
produce=fire_tongs

