size=medium
buildable=no
enhanced_building=yes
output=ration
output=snack
output=meal

[enhancement_cost]
log=1
grout=3
thatchreed=2

[return_on_dismantle_on_enhanced]
grout=2

[working positions]
innkeeper=2

[inputs]
fish=4
pittabread=4
meat=4
strongbeer=4
beer=4

[programs]
# TRANSLATORS: "Completed/Skipped/Did not start preparing a ration because ...
produce_ration=_preparing a ration
# TRANSLATORS: "Completed/Skipped/Did not start preparing a snack because ...
produce_snack=_preparing a snack
# TRANSLATORS: "Completed/Skipped/Did not start preparing a meal because ...
produce_meal=_preparing a meal
# TRANSLATORS: "Completed/Skipped/Did not start working because ...
work=_working

[produce_ration]
return=skipped unless economy needs ration
sleep=14000
consume=fish,pittabread,meat
animate=working 19000
produce=ration

[produce_snack]
return=skipped unless economy needs snack
sleep=15000
consume=pittabread fish,meat beer
animate=working 20000
produce=snack

[produce_meal]
return=skipped unless economy needs meal
sleep=17000
consume=pittabread fish,meat strongbeer
animate=working 20000
produce=meal

[work]
call=produce_ration
call=produce_snack
call=produce_meal
return=skipped

